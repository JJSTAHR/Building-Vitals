# Building Vitals - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ==========================================
# Application Configuration
# ==========================================

# Encryption secret for token management (REQUIRED)
# Generate with: openssl rand -base64 32
VITE_ENCRYPTION_SECRET=your_32_character_encryption_secret_here

# Default Authentication Tokens
# These tokens provide fallback authentication when user tokens are unavailable
# IMPORTANT: Never commit actual token values to version control

# Default token for Falls City site (REQUIRED)
VITE_DEFAULT_TOKEN_FALLS_CITY=your_falls_city_token_here

# Default token for Site 2
VITE_DEFAULT_TOKEN_SITE_2=your_site_2_token_here

# Default site ID to use when no site is specified
# Must match one of the configured site IDs above
VITE_DEFAULT_SITE_ID=ses_falls_city

# ==========================================
# Firebase Configuration
# ==========================================

# Firebase project ID (REQUIRED)
FIREBASE_PROJECT_ID=building-vitals-prod

# Firebase API key (REQUIRED)
FIREBASE_API_KEY=your_firebase_api_key_here

# Firebase Auth domain
FIREBASE_AUTH_DOMAIN=building-vitals-prod.firebaseapp.com

# Firebase database URL
FIREBASE_DATABASE_URL=https://building-vitals-prod.firebaseio.com

# Firebase storage bucket
FIREBASE_STORAGE_BUCKET=building-vitals-prod.appspot.com

# Firebase messaging sender ID
FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here

# Firebase app ID
FIREBASE_APP_ID=your_app_id_here

# Firebase measurement ID (for Analytics)
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# ==========================================
# Feature Flags
# ==========================================

# Enable token refresh functionality
VITE_ENABLE_TOKEN_REFRESH=true

# Enable automatic token rotation
VITE_ENABLE_TOKEN_ROTATION=false

# Enable security monitoring
VITE_ENABLE_SECURITY_MONITORING=true

# Enable rate limiting
VITE_ENABLE_RATE_LIMITING=true

# Enable audit logging
VITE_ENABLE_AUDIT_LOGGING=true

# Enable two-factor authentication
VITE_ENABLE_TWO_FACTOR_AUTH=false

# Enable advanced session management
VITE_ENABLE_SESSION_MANAGEMENT=true

# Enable IP whitelisting
VITE_ENABLE_IP_WHITELISTING=false

# Enable advanced analytics
VITE_ENABLE_ADVANCED_ANALYTICS=true

# Enable beta features
VITE_ENABLE_BETA_FEATURES=false

# ==========================================
# Application Settings
# ==========================================

# Application environment (development, staging, production)
VITE_APP_ENV=production

# API base URL
VITE_API_BASE_URL=https://api.buildingvitals.com

# Enable analytics
VITE_ENABLE_ANALYTICS=true

# Log level (debug, info, warn, error)
VITE_LOG_LEVEL=info

# Enable debug mode
VITE_DEBUG_MODE=false

# ==========================================
# Firebase App Check (Production Security)
# ==========================================

# ReCAPTCHA v3 Site Key for Firebase App Check
# App Check protects your backend resources from abuse by ensuring requests come from your authentic app.
#
# Setup Instructions:
# 1. Go to Firebase Console: https://console.firebase.google.com/project/YOUR_PROJECT_ID/appcheck
# 2. Register your app with reCAPTCHA v3
# 3. Get your reCAPTCHA v3 site key (starts with 6L...)
# 4. Add it here (not the secret key - that goes in Firebase Console)
#
# Validation:
# - Must be a valid reCAPTCHA v3 site key (not v2)
# - Length should be > 20 characters
# - Should start with "6L..."
# - Do NOT use placeholder values in production
#
# Example: VITE_RECAPTCHA_SITE_KEY=6Lc7xKYpAAAAAB2vHZq8uJ4K...
VITE_RECAPTCHA_SITE_KEY=your-recaptcha-site-key

# ==========================================
# Security Settings
# ==========================================

# Token expiration time (in seconds)
VITE_TOKEN_EXPIRY=3600

# Refresh token expiration (in seconds)
VITE_REFRESH_TOKEN_EXPIRY=604800

# Maximum login attempts before lockout
VITE_MAX_LOGIN_ATTEMPTS=5

# Account lockout duration (in seconds)
VITE_LOCKOUT_DURATION=900

# Session timeout (in seconds)
VITE_SESSION_TIMEOUT=1800

# ==========================================
# Performance Settings
# ==========================================

# Enable service worker
VITE_ENABLE_SERVICE_WORKER=true

# Enable code splitting
VITE_ENABLE_CODE_SPLITTING=true

# Enable lazy loading
VITE_ENABLE_LAZY_LOADING=true

# Cache duration (in seconds)
VITE_CACHE_DURATION=3600

# ==========================================
# Monitoring and Logging
# ==========================================

# Sentry DSN (for error tracking)
VITE_SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Sample rate for performance monitoring (0.0 to 1.0)
VITE_PERFORMANCE_SAMPLE_RATE=0.1

# Enable error tracking
VITE_ENABLE_ERROR_TRACKING=true

# ==========================================
# Third-Party Integrations
# ==========================================

# Google Analytics ID
VITE_GA_ID=G-XXXXXXXXXX

# Hotjar site ID
VITE_HOTJAR_ID=your_hotjar_id

# Intercom app ID
VITE_INTERCOM_APP_ID=your_intercom_app_id

# ==========================================
# Development Settings (Optional)
# ==========================================

# Development server port
VITE_PORT=3000

# Enable hot module replacement
VITE_HMR=true

# Development server host
VITE_HOST=localhost

# ==========================================
# CI/CD Settings (for GitHub Actions)
# ==========================================

# These should be set as GitHub Secrets, not in .env

# FIREBASE_TOKEN              # Firebase CI token
# FIREBASE_SERVICE_ACCOUNT_PROD # Firebase service account JSON (production)
# FIREBASE_SERVICE_ACCOUNT_STAGING # Firebase service account JSON (staging)
# SLACK_WEBHOOK               # Slack notifications webhook
# SLACK_SECURITY_WEBHOOK      # Security alerts webhook
# METRICS_API_KEY             # Metrics API authentication
# SNYK_TOKEN                  # Snyk security scanning token

# ==========================================
# Notes
# ==========================================

# 1. Copy this file to .env: cp .env.example .env
# 2. Fill in your actual values
# 3. NEVER commit .env to version control
# 4. Add .env to .gitignore
# 5. Use different values for development, staging, and production
# 6. Rotate secrets regularly
# 7. Use strong, randomly generated secrets
# 8. Keep sensitive values secure

# Generate encryption secret:
#   openssl rand -base64 32

# Generate random token:
#   openssl rand -hex 32

# Check if .env is in .gitignore:
#   git check-ignore .env
